<%= render '/layouts/menu' %>
<div class="row">
  <div class="col-sm-8">
   <h2><%=@artist.name %></h2>
   <p>Albums(<%=@artist.albums.all.count%>)</P>
   <div class="p-d-inline-flex "> 
     <% @artist.albums.each do |album| %>
       <div class="card" style="width:150px" >
         <img src=" <%= album.image_url %>" class="card-img-top" >
         <div class="card-body">
         <div class="card-title"><%= album.name %></div>
         <div class="card-text"><%= album.released_at %></div>
         </div>
       </div>
       
   <% end %>
   </div>
 </div> 
  <div class="col-sm-4"><%=@artist.image_url%></div>
</div>
